<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="clask.FXMLDocumentController">
   <children>
   
   
       <Label contentDisplay="CENTER" text="Please Login" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
    
       <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    
       <TextField fx:id="userField" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    
       <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    
       <PasswordField fx:id="passwordField" GridPane.columnIndex="2" GridPane.rowIndex="2" />
       
       <HBox alignment="bottom_right" spacing="70" GridPane.columnIndex="2" GridPane.rowIndex="4">
          <children>
              <Button text="Back" onAction="#handleLoginBackButtonAction"/>
              <Button text="Sign In" />
          </children>
   </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>



</GridPane>
