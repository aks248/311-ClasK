<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clask.FXMLLoginController">
   <children>
   
   
       <Label fx:id="loginWelcomeLabel" contentDisplay="CENTER" text="Please Login" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
    
       <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    
       <TextField fx:id="userField" promptText="-Enter user ID-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    
       <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    
       <PasswordField fx:id="passwordField" promptText="-Case sensitive-" GridPane.columnIndex="1" GridPane.rowIndex="3" />
       
       <HBox alignment="bottom_right" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5">
          <children>
              <Button onAction="#handleLoginBackButtonAction" text="Back" HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS" />
              <Button onAction="#handleSignInButtonAction" text="Sign In" />
          </children>
   </HBox>
      <Label fx:id="loginWarningLabel" textFill="#f80303" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>



</GridPane>
